<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hubei.base.mapper.impl.ContentMapper">
    <sql id="all_columns">
        *
    </sql>
    <sql id = "tableName">
        t_content
    </sql>

    <sql id="queryWhere">
        <if test = "name != null and name != ''">
            AND name like CONCAT(CONCAT('%',#{name}),'%')
        </if>
        <if test = "menuId != null">
            AND menuId = #{menuId}
        </if>
        limit #{offset} , #{limit}
    </sql>

    <insert id="insert" parameterType="ContentPo">
        INSERT INTO <include refid="tableName"/>
        (
        url,
        image,
        name,
        sort,
        status,
        menuId,
        adminUrl,
        insertTime,
        lastUpdateTime
        )
        VALUES
        (
        #{url},
        #{image},
        #{name},
        #{sort},
        #{status},
        #{menuId},
        #{adminUrl},
        #{insertTime},
        #{lastUpdateTime}
        )
    </insert>

    <update id="update" parameterType="ContentPo">
        update <include refid="tableName"/>
        <set>
            <if test = "image != null">
                image = #{image},
            </if>
            <if test = "name != null">
                name = #{name},
            </if>
            <if test = "url != null">
                url = #{url},
            </if>

            <if test = "menuId != null">
                menuId = #{menuId},
            </if>

            <if test = "sort != null">
                sort = #{sort}
            </if>
            <if test = "adminUrl != null">
                adminUrl = #{adminUrl}
            </if>
            where id = #{id}
        </set>
    </update>

    <select id="selectList" parameterType="ContentPo" resultType="ContentPo">
        select <include refid="all_columns"/>
        FROM <include refid="tableName"/>
        <where>
            status = 1
            <include refid="queryWhere"/>
        </where>
    </select>

    <select id="selectCount" parameterType="ContentPo" resultType="java.lang.Integer">
        select count(1)
        FROM <include refid="tableName"/>
        <where>
            status = 1
            <include refid="queryWhere"/>
        </where>
    </select>

    <select id = "selectById" resultType="ContentPo">
        select  <include refid="all_columns"/>
        FROM <include refid="tableName"/>
        where id = #{id} and status = 1
    </select>

    <update id="updateStatus"  parameterType="ContentPo" >
        update <include refid="tableName"/>
        set status = 2 where id = #{id}
    </update>
</mapper>