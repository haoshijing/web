<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hubei.base.mapper.impl.ContentMapper">
    <sql id="all_columns">
        *
    </sql>
    <sql id = "tableName">
        t_content
    </sql>

    <sql id="queryWhere">
        <if test = "name != null and name != ''">
            AND name like CONCAT(CONCAT('%',#{name}),'%')
        </if>
        <if test = "menuId != null">
            AND menuId = #{menuId}
        </if>
        limit #{offset} , #{limit}
    </sql>

    <insert id="insert" parameterType="ContentPo">
        INSERT INTO <include refid="tableName"/>
        (
        url,
        image,
        name,
        sort,
        status,
        menuId,
        insertTime,
        lastUpdateTime
        )
        VALUES
        (
        #{url},
        #{image},
        #{name},
        #{sort},
        #{status},
        #{menuId},
        #{insertTime},
        #{lastUpdateTime}
        )
    </insert>

    <select id="selectList" parameterType="ContentPo" resultType="ContentPo">
        select <include refid="all_columns"/>
        FROM <include refid="tableName"/>
        <where>
            status = 1
            <include refid="queryWhere"/>
        </where>
    </select>

    <select id="selectCount" parameterType="ContentPo" resultType="java.lang.Integer">
        select count(1)
        FROM <include refid="tableName"/>
        <where>
            status = 1
            <include refid="queryWhere"/>
        </where>
    </select>

    <select id = "selectById" resultType="ContentPo">
        select  <include refid="all_columns"/>
        FROM <include refid="tableName"/>
        where id = #{id} and status = 1
    </select>
</mapper>